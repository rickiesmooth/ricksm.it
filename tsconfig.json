{
  "compilerOptions": {
    "rootDir": "src",
    "lib": ["es2019", "dom"],
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["./packages/*"]
    }
  },
  "include": ["./src/**/*", "./packages/**/*"],
  "exclude": ["node_modules"]
}
